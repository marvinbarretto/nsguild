---
import Header from '../components/Header.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import Meta from '../components/Meta.astro';
import { fetchSettings } from '../utils/sanity';
import type { Settings } from '../utils/types';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import '../styles/global.scss';

const settings: Settings = await fetchSettings();
const footerText = settings.footerText || "bla bla";

const metadata = Astro.props.metadata || {
  title: "Default Title",
  description: "Default description",
  keywords: "default, keywords",
};

---
<html lang="en">
  <Meta {...metadata} />
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Delius+Swash+Caps&family=Mystery+Quest&family=Twinkle+Star&display=swap" rel="stylesheet">
  <SpeedInsights />
  <Analytics/>

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <!-- TODO: Fix Site Title -->
    <!-- <title>{siteTitle}</title>  -->
    <slot name="head" />
  </head>
  <body>
    <Header />
    <Nav />
    <main>
      <slot />
    </main>
    <Footer footerText={footerText} />
    <SpeedInsights />
  </body>
</html>

