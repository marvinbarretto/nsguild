// Fetch data for the current post
const { slug } = Astro.params;

const POST_QUERY = `*[_type == "post" && slug.current == $slug][0] {
  title,
  slug,
  publishedAt,
  body,
  image,
  images[]{
    asset->{
      url
    },
    caption
  }
}`;




