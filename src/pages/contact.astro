<script>
    let responseMessage;
  
    async function submit(e: SubmitEvent) {
      e.preventDefault();
      const formData = new FormData(e.currentTarget as HTMLFormElement);
      const response = await fetch("/api/feedback", {
        method: "POST",
        body: formData,
      });
      const data = await response.json();
      responseMessage = data.message;
    }
  </script>