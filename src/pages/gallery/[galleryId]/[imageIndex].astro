---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { fetchAllGalleryDocuments } from '../../api/getGalleryImages';

const { galleryId, imageIndex } = Astro.params;

// Fetch all galleries
const galleries = await fetchAllGalleryDocuments();
const gallery = galleries.find((g) => g._id === galleryId);

if (!gallery) {
  throw new Error("Gallery not found");
}

const image = gallery.images[imageIndex as any];

if (!image) {
  throw new Error("Image not found");
}
---

<BaseLayout>
  <h1>{gallery.title}</h1>
  <div class="image-page">
    <img
      src={image.url}
      alt={image.altText || `A photo from the ${gallery.title} event`}
    />
    {image.caption && <p>{image.caption}</p>}
    <a href={`/gallery/${gallery._id}`}>Back to {gallery.title}</a>
  </div>

  <style>
    .image-page {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    .image-page img {
      max-width: 90%;
      height: auto;
    }
    .image-page a {
      margin-top: 16px;
      text-decoration: none;
      color: #0070f3;
      font-weight: bold;
    }
  </style>
</BaseLayout>
