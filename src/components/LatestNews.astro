---
import { fetchLatestNews } from "../sanity/queries/news";
import type { Post } from "../utils/types";
import DateDisplay from "./shared/DateDisplay.astro";

const news: Post | null = await fetchLatestNews();
---

{news && (
    <section class="latest-news">
      <h2>Latest News</h2>
      {/* <a href={`/news/${news.slug}`}> */}
        <h3>{news.title}</h3>
        <p>{news.body}</p>
        {/* <p class="date">
          <DateDisplay date={news.publishedAt} />
        </p> */}
      </a>
    </section>
  )}
  
  <style>
    .latest-news {
      background: var(--bg-medium);
      padding: 1rem;
      border-radius: 8px;
      flex: 1;
    }
  
    .latest-news .date {
      font-size: 0.9rem;
      color: #666;
    }
  </style>