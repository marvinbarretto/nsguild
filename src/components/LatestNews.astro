---
import { fetchLatestNews } from "../sanity/queries/news";
import type { Post } from "../utils/types";

const news: Post | null = await fetchLatestNews();
---

{news && (
    <section class="latest-news">
      <h2>Latest News</h2>
      <a href={`/news/${news.slug}`}>
        <h3>{news.title}</h3>
        <p class="date">{new Date(news.publishedAt).toLocaleDateString()}</p>
      </a>
    </section>
  )}
  
  <style>
    .latest-news {
      background: #f9f9f9;
      padding: 1rem;
      border-radius: 8px;
    }
  
    .latest-news .date {
      font-size: 0.9rem;
      color: #666;
    }
  </style>