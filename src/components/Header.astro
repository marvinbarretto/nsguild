---
import { fetchGlobals } from "../utils/sanity"
import Nav from "./Nav.astro";

interface Props {
  isHomePage?: boolean;
}

const { isHomePage = false } = Astro.props;
const globals = await fetchGlobals();

---

<header>
  {isHomePage ? (
    <h1 class="site-title">
      <span class="ns">Norfolk & Suffolk Guild of</span>
      <span class="wsd">Weavers, Spinners and Dyers</span>
    </h1>
  ) : (
    <a href="/" class="site-title">
      <span class="ns">Norfolk & Suffolk Guild of</span>
      <span class="wsd">Weavers, Spinners and Dyers</span>
    </a>
  )}
</header>

<style>
  header {
    /* background-color: var(--header-bg); */
    /* background-color: #6f0909; */
    /* background-color: #3a1290; */
    background-color: #1968d0;
    background-image: url('../images/weave.jpg');
    padding: 1rem;
    text-align: center;
    background-position: center;
    background-blend-mode: multiply; /* hue; /* saturation; color; */
  }

  .site-title {
    display: flex;
    color: var(--header-text);
    font-size: 2rem;
    text-decoration: none;
    font-weight: bold;
    line-height: 1;
    justify-content: center;
    flex-direction: column;
    text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
  }

  .ns {
    font-size: 1.3rem;
    @media (min-width: 900px) {
      font-size: 2.8rem;
    }
    line-height: 1;
  }

  .wsd {
    line-height: 1;
    font-size: 2rem;
    @media (min-width: 900px) {
      font-size: 3.8rem;
    }
  }
</style>
