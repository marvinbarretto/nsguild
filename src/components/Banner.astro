---
import { fetchHomepage } from "../sanity/queries/homepage";
import type { Homepage } from "../utils/types";

const homepage: Homepage | null = await fetchHomepage();
const banner = homepage?.banner;
---

{banner?.isActive && (
  <div class="banner">
    {banner.link ? (
      <a href={banner.link}>{banner.message}</a>
    ) : (
      <p>{banner.message}</p>
    )}
  </div>
)}

<style>
  .banner {
    background: var(--accent-light);
    color: var(--text-dark);
    padding: 1rem;
    border-radius: 8px;
    font-size: 20px;
    text-align: center;
    font-weight: bold;
    margin-bottom: 1rem;
  }
</style>
