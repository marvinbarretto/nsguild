---
import { fetchHomepage } from "../sanity/queries/homepage";
import type { Homepage } from "../utils/types";

const homepage: Homepage | null = await fetchHomepage();
const banner = homepage?.banner;
---

{banner?.isActive && (
  <div class="banner">
    {banner.link ? (
      <a href={banner.link}>{banner.message}</a>
    ) : (
      <p>{banner.message}</p>
    )}
  </div>
)}

<style>
  .banner {
    /* background: var(--accent-light); */
    background-color: #FFC;
    color: var(--text-dark);
    padding: 4px;
    border-radius: 8px;
    text-align: center;
    font-weight: bold;
    margin-bottom: 1rem;
    /* box-shadow: 0 1px 4px rgba(0,0,0,0.4); */

    /* border: solid; */
  }
</style>
