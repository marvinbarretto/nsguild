---

const { footerText } = Astro.props;

---
<footer>
  <p>{footerText}</p>
</footer>

<style>

footer {
  background-color: var(--footer-bg);
  color: var(--footer-text);

  margin-top: auto;
  padding: 1rem;
  text-align: center;
}


  footer {
    display: flex;
    flex-direction: column;

    @media( min-width: 800px) {
      flex-direction: row;
      justify-content: center;
      
    }
  }
</style>