---
export interface NavLink {
  name: string;
  url: string;
}

export interface Props {
  links: NavLink[];
}

const { links } = Astro.props;
if (!links || links.length === 0) {
  throw new Error("Nav component is missing links!");
}
---

<nav>
  <button class="nav-toggle" aria-controls="nav-links" aria-expanded="false">
    Open Navigation
  </button>

  <ul id="nav-links" class="nav-links" data-open="false">
    {links.map((link) => (
      <li><a href={link.url}>{link.name}</a></li>
    ))}
  </ul>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggleButton = document.querySelector(".nav-toggle");
    const navLinks = document.getElementById("nav-links");

    if (!toggleButton || !navLinks) {
      console.error("Navigation elements not found!");
      return;
    }

    toggleButton.addEventListener("click", () => {
      const isOpen = navLinks.getAttribute("data-open") === "true";

      navLinks.setAttribute("data-open", isOpen ? "false" : "true");
      toggleButton.textContent = isOpen ? "Open Navigation" : "Close Navigation";
      toggleButton.setAttribute("aria-expanded", isOpen ? "false" : "true");
    });
  });
</script>


<style>
  .nav-links {
    display: none;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-links[data-open="true"] {
    display: block;
  }

  .nav-toggle {
    display: block;
    width: 100%;
    text-align: left;
    padding: 10px;
    background: #444;
    color: white;
    border: none;
    font-size: 1rem;
    cursor: pointer;
  }

  .nav-links li {
    padding: 10px;
    background: #666;
    border-bottom: 1px solid #555;
  }

  .nav-links a {
    color: white;
    text-decoration: none;
    display: block;
  }

  @media (min-width: 768px) {
    .nav-toggle {
      display: none;
    }

    .nav-links {
      display: flex;
      background: #444;
      padding: 10px;
      display: flex !important;
    }

    .nav-links li {
      padding: 0;
      margin-right: 15px;
      background: none;
      border-bottom: none;
    }

    .nav-links a {
      padding: 10px;
      background: none;
    }
  }
</style>