---
const currentPath = Astro.url.pathname;


const navLinks = [
  { name: "Home", url: "/" },
  { name: "News", url: "/news" },
  { name: "Events", url: "/events" },
  { name: "Photo Gallery", url: "/gallery" },
  { name: "Distaff and Shuttle", url: "/publications" },
  { name: "Equipment", url: "/equipment" },
  { name: "Contact", url: "/contact" }
];

---

<nav>
  <button class="nav-toggle" aria-controls="nav-links" aria-expanded="false">
    Open Navigation
  </button>

  <ul id="nav-links" class="nav-links" data-open="false">
    {navLinks.map(link => (
      <li class={currentPath === link.url ? 'selected' : ''}>
        <a href={link.url}>{link.name}</a>
      </li>
    ))}
  </ul>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggleButton = document.querySelector(".nav-toggle");
    const navLinks = document.getElementById("nav-links");

    if (!toggleButton || !navLinks) {
      console.error("Navigation elements not found!");
      return;
    }

    toggleButton.addEventListener("click", () => {
      const isOpen = navLinks.getAttribute("data-open") === "true";

      navLinks.setAttribute("data-open", isOpen ? "false" : "true");
      toggleButton.textContent = isOpen ? "Open Navigation" : "Close Navigation";
      toggleButton.setAttribute("aria-expanded", isOpen ? "false" : "true");
    });
  });
</script>


<style>
  .nav-links {
    display: none;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-links[data-open="true"] {
    display: block;
  }

  .nav-toggle {
    text-align: center;
    display: block;
    width: 100%;
    padding: 10px;
    background-color: var(--nav-bg);
    color: var(--nav-text);
    border: none;
    font-size: 1rem;
    cursor: pointer;
  }

  .nav-links li {
    background-color: var(--nav-bg);
    border-bottom: 1px solid #555;
  }

  .nav-links a {
    padding: 0.5rem;
    color: var(--nav-text) ;
    text-decoration: none;
    display: block;
    &:hover {
      background-color: black;
      
    }
  }

  .nav-links li.selected {
    background: black;
    a {
      color: white;
    }
  }

  

  @media (min-width: 768px) {
    .nav-toggle {
      display: none;
    }

    .nav-links {
      display: flex;
      justify-content: center;
      background-color: var(--nav-bg);
    }

    .nav-links li {
      padding: 0;
      margin-right: 15px;
      background: none;
      border-bottom: none;
    }

    .nav-links a {
      padding: 10px;
      background: none;
    }
  }
</style>