---
import { fetchLatestNews } from "../../sanity/queries/news";
import type { Post } from "../../utils/types";

const news: Post | null = await fetchLatestNews();
---

{news && (
    <section class="latest-news">
      <h2>Latest News</h2>
      <h3>{news.title}</h3>
      <p>{news.body}</p>
    </section>
  )}
  
  <style>
    .latest-news {
      background: var(--bg-medium);
      padding: .5rem;
      @media (min-width: 700px) {
        padding: 1rem;
      }
      border-radius: 8px;
      flex: 1;
    }
  
    .latest-news .date {
      font-size: 0.9rem;
      color: #666;
    }
  </style>