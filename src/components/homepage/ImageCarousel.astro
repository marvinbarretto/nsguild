---
import { Image } from "astro:assets";

// TODO: Fetch from Sanity or CMS later
import img1 from "../../../public/images/carousel/1.png";
import img2 from "../../../public/images/carousel/2.png";
import img3 from "../../../public/images/carousel/3.png";

const images = [img1, img2, img3];
---
<div class="carousel-bg">
  {images.map((img, index) => (
    <Image
      class={`carousel-image ${index === 0 ? "active" : ""}`}
      src={img}
      alt={`Guild work ${index + 1}`}
      width={1600}
      height={500}
      format="webp"
    />
  ))}
</div>

<style>
.carousel-bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  overflow: hidden;
}

/* Default (mobile-first) */
.carousel-image {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center 25%; /* show more top on mobile */
  opacity: 0;
  transition: opacity 1s ease-in-out;
}

.carousel-image.active {
  opacity: 1;
  z-index: 1;
}

/* Adjust for larger screens */
@media (min-width: 768px) {
  .carousel-image {
    object-position: center center;
  }
}
</style>

<script is:inline>
  let current = 0;
  const images = document.querySelectorAll(".carousel-image");

  setInterval(() => {
    images[current].classList.remove("active");
    current = (current + 1) % images.length;
    images[current].classList.add("active");
  }, 4000);
</script>
