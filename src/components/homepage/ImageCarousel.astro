---
import { urlForImage } from "../../sanity/lib/url-for-image";
const { images = [] } = Astro.props; // âœ… Default to empty array

---
<div class="carousel-bg">
  {images.length && (
    images.map(({ asset }: { asset: { url: string } }, index: number) => {
      const image = urlForImage(asset);
      const srcSet = `
        ${image.width(400).height(125).url()} 400w,
        ${image.width(800).height(250).url()} 800w,
        ${image.width(1200).height(375).url()} 1200w,
        ${image.width(1600).height(500).url()} 1600w
      `;

      return (
        <img
          class={`carousel-image ${index === 0 ? "active" : ""}`}
          src={image.width(800).height(250).url()}
          srcset={srcSet}
          sizes="100vw"
          alt={`Guild work ${index + 1}`}
          loading="eager"
        />
      );
    })
  )}

</div>

<style lang="scss">
  @use "../../styles/_breakpoints.scss" as *;

.carousel-bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  overflow: hidden;
}

/* Default (mobile-first) */
.carousel-image {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center 25%; /* show more top on mobile */
  opacity: 0;
  transition: opacity 1s ease-in-out;
}

.carousel-image.active {
  opacity: 1;
  z-index: 1;
}

/* Adjust for larger screens */
@media (min-width: $BREAKPOINT_TABLET_PORTRAIT) {
  .carousel-image {
    object-position: center center;
  }
}
</style>

<script is:inline>
  let current = 0;
  const images = document.querySelectorAll(".carousel-image");

  setInterval(() => {
    images[current].classList.remove("active");
    current = (current + 1) % images.length;
    images[current].classList.add("active");
  }, 4000);
</script>
