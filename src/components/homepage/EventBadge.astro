---
import { getEventTiming } from "../../utils/dates";
const { date } = Astro.props;
const timing = getEventTiming(date);
---

<span class="aside-card__badge badge">{timing.label}</span>

<style scoped lang="scss">
    .aside-card__badge {
        background: rgba(0, 0, 0, 0.5);
        color: white;
        font-size: 0.8rem;
        padding: 3px 6px;
        border-radius: 4px;
    }
</style>